<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ist.meic.cmu.locmess_client">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".inbox.InboxActivity"
            android:label="@string/title_activity_inbox"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.WithDrawer" />
        <activity
            android:name=".inbox.ShowMessageActivity"
            android:label=""
            android:parentActivityName=".inbox.InboxActivity"
            android:theme="@style/AppTheme.WithDrawer">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".inbox.InboxActivity" />
        </activity>
        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.WithDrawer" />
        <activity
            android:name=".navigation.BaseNavgationActivity"
            android:label="@string/title_activity_base_navgation"
            android:theme="@style/AppTheme.WithDrawer"></activity>
    </application>

</manifest>